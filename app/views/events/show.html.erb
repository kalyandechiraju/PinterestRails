<!-- <p id="notice"><%= notice %></p> -->
<div class="container">
<div class="row">
	<div class="col-lg-6">
		<div class="well">
			<%= image_tag @event.image(:medium) %>
			<p>
				<strong>Title:</strong>
				<%= @event.title %>
			</p>

			<p>
				<strong>Description:</strong>
				<%= @event.description %>
			</p>

			<p>
				<strong>Created by:</strong>
				<%= @event.user.name %>
			</p>


		<% if current_user == @event.user %>
		<%= link_to 'Edit', edit_event_path(@event), class: "btn btn-primary" %> |
		<% end %>
		<%= link_to 'Back', events_path, class: "btn btn-primary" %>
		<H4>Comments</H4>
				<div id="comments">
					<%= render :partial => @event.comments %>
				</div>
				<%= simple_form_for [@event, Comment.new] do |f| %>
				<p>
					<!--<%= f.label :body, "New Comment" %></br>
					<%= f.text_area :body %> -->
					<%= f.input :body, :label => "New Comment", as: :text, input_html: { rows: "3" } %>
				</p>
				<p><%= f.submit "Add Comment", class: "btn btn-primary" %></p>
		<% end %>	

				</div>
	</div>
	<div class="col-lg-6"></div>
</div>
</div>